<script language="JavaScript" type="text/javascript">

    findPwd = function (fid) {
        //邮箱找回
        if (fid == 1) {
            location.href = 'FindPass';
            this.checked = true;
        } else {
            location.href = 'FindPwd'; this.checked = true;
        }


    } 

   

